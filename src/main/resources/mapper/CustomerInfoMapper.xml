<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qyt.qytbackend.mapper.CustomerInfoMapper">
    <!-- 结果映射 -->
    <resultMap id="CustomerInfoResultMap" type="CustomerInfo">
        <id column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="real_name" property="realName" jdbcType="VARCHAR" />
        <result column="id_card" property="idCard" jdbcType="VARCHAR" />
        <result column="avatar" property="avatar" jdbcType="VARCHAR" />
        <result column="register_time" property="registerTime" jdbcType="TIMESTAMP" />
        <result column="login_status" property="loginStatus" jdbcType="TINYINT" />
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP" />
        <result column="status" property="status" jdbcType="TINYINT" />
        <result column="member_level" property="memberLevel" jdbcType="INTEGER" />
    </resultMap>

    <!-- 插入语句 -->
    <insert id="insert" parameterType="CustomerInfo" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO customer_info (
            username,
            password,
            phone,
            email,
            real_name,
            id_card,
            avatar,
            register_time,
            login_status,
            last_login_time,
            status,
            member_level
        ) VALUES (
            #{username,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            #{phone,jdbcType=VARCHAR},
            #{email,jdbcType=VARCHAR},
            #{realName,jdbcType=VARCHAR},
            #{idCard,jdbcType=VARCHAR},
            #{avatar,jdbcType=VARCHAR},
            #{registerTime,jdbcType=TIMESTAMP},
            #{loginStatus,jdbcType=TINYINT},
            #{lastLoginTime,jdbcType=TIMESTAMP},
            #{status,jdbcType=TINYINT},
            #{memberLevel,jdbcType=INTEGER}
        )
    </insert>

    <!-- 删除语句 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM customer_info WHERE user_id = #{userId,jdbcType=INTEGER}
    </delete>

    <!-- 更新语句 -->
    <update id="update" parameterType="CustomerInfo">
        UPDATE customer_info
        <set>
            <if test="username != null">username = #{username,jdbcType=VARCHAR},</if>
            <if test="password != null">password = #{password,jdbcType=VARCHAR},</if>
            <if test="phone != null">phone = #{phone,jdbcType=VARCHAR},</if>
            <if test="email != null">email = #{email,jdbcType=VARCHAR},</if>
            <if test="realName != null">real_name = #{realName,jdbcType=VARCHAR},</if>
            <if test="idCard != null">id_card = #{idCard,jdbcType=VARCHAR},</if>
            <if test="avatar != null">avatar = #{avatar,jdbcType=VARCHAR},</if>
            <if test="registerTime != null">register_time = #{registerTime,jdbcType=TIMESTAMP},</if>
            <if test="loginStatus != null">login_status = #{loginStatus,jdbcType=TINYINT},</if>
            <if test="lastLoginTime != null">last_login_time = #{lastLoginTime,jdbcType=TIMESTAMP},</if>
            <if test="status != null">status = #{status,jdbcType=TINYINT},</if>
            <if test="memberLevel != null">member_level = #{memberLevel,jdbcType=INTEGER},</if>
        </set>
        WHERE user_id = #{userId,jdbcType=INTEGER}
    </update>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="CustomerInfoResultMap">
        SELECT * FROM customer_info WHERE user_id = #{userId,jdbcType=INTEGER}
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultMap="CustomerInfoResultMap">
        SELECT * FROM customer_info
    </select>

    <!-- 根据用户名查询 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="CustomerInfoResultMap">
        SELECT * FROM customer_info WHERE username = #{username,jdbcType=VARCHAR}
    </select>

    <!-- 根据手机号查询 -->
    <select id="selectByPhone" parameterType="java.lang.String" resultMap="CustomerInfoResultMap">
        SELECT * FROM customer_info WHERE phone = #{phone,jdbcType=VARCHAR}
    </select>

    <!-- 根据邮箱查询 -->
    <select id="selectByEmail" parameterType="java.lang.String" resultMap="CustomerInfoResultMap">
        SELECT * FROM customer_info WHERE email = #{email,jdbcType=VARCHAR}
    </select>
</mapper>
